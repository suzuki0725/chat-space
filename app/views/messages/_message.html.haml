.chat-main__message-list__top-item
  .chat-main__message-list__name
    = message.user.name
  .chat-main__message-list__datetime
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.chat-main__message-list__top-item
  - if message.content.present?
    %p.chat-main__message-list__text
      = message.content
  = image_tag message.image.url, class: 'chat-main__message-list__image' if message.image.present?